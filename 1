#include <iostream> 
using namespace std;
float metodDihotomii(float(*) (float), float, float);    //прототип
float f1(float);     //прототип
float f2(float);
int main()
{
	setlocale(0, "");
	float a, b, e=0.001;
	cout << "Введите приближения для f1"<<endl;
	cout << "a =" << ' '; cin >> a;
	cout << "b =" << ' '; cin >> b;
	cout << "Корень уровнения f1=" << metodDihotomii(f1, a, b)<<endl;
	cout << "Введите приближения для f2" << endl;
	cout << "a =" << ' '; cin >> a;
	cout << "b =" << ' '; cin >> b;
	cout << "Корень уровнения f2=" << metodDihotomii(f2, a, b)<<endl;
}

float metodDihotomii(float(*f) (float), float a, float b)
{
	float x, e=0.001;
	while (abs(a - b) > 2 * e)
	{
		x = (a + b) / 2;
		if ((f(x)*f(a))<=0)
			b = x;
		else a = x;
	}
	return x ;
}

float f1(float x)
{
	return (2-pow(x,2)+x);
}

float f2(float x)
{
	return (pow(x,3)+2*x-4);
}
